<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-6" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home-Admin</title>

    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <script src="/jquery/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>

    <style>
        h2,
        h4,
        h5 {
            text-align: center;
        }
    </style>
</head>

<body>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">

    </div>

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

        <table class="table">
            <tr>
                <td>
                    <h2>
                        <%= r_info.r_name%>
                    </h2>
                    <h4>
                        <%= r_info.r_location%>
                    </h4>
                    <h5>
                        <%= r_info.r_details%>
                    </h5>
                </td>
            </tr>

            <tr>
                <td>
                    <h4>Menus</h4>
                </td>
            </tr>

            <tr>
                <td>
                    <%for(var i=0;i< i_info.length; i++){%>
                        <li>
                            <a href="/home-admin/view-item/<%= i_info[i].i_id%>">
                                <%= i_info[i].i_name%>
                            </a>
                        </li>
                        <%}%>
                </td>
            </tr>

            <tr>
                <td>
                    <a class="btn btn-info" style="width:20%;float: right;" href="/home-admin/view-restaurant">Previous page</a>
                </td>
            </tr>
        </table>
    </div>

</body>

</html>